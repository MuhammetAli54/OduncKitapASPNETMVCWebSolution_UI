@using OduncKitapASPNETMVCWebSolution_UI.Models
@model OduncIslemViewModel
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<div class="form-group col-4" style="margin:auto">
    @using (Html.BeginForm("Ekle", "OduncIslem", FormMethod.Post, new { @class = "form-horizontal"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Kitap:")<br />
            @Html.DropDownListFor(x => x.KitapId, (List<SelectListItem>)ViewBag.KitapListesi, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Üye:")<br />
            @Html.DropDownListFor(x => x.UyeId, (List<SelectListItem>)ViewBag.UyeListesi, new { @class = "form-control" })
        </div><br />
        <div class="form-group">
            <input  type="date"class="form-control" name="OduncAlinmaTarihi"/>
        </div><br />
        <div class="form-group " align="right">
            <button type="submit" class="btn btn-success">ÖDÜNÇ VER</button>
        </div>
    }

</div>


